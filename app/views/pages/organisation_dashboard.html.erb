<h1> Mes participations en attente</h1>
<% @missions.each_with_index do |mission, index| %>
  <% if @participations_per_mission[index].any? %>
    <%= mission.title %>
    <% @participations_per_mission[index].each do |participation| %>
      <li>
        <%= participation.user.username %>
        <%= button_to "accepter", accept_participation_path(participation), method: :patch, class:"btn btn-sm" %>
        or
        <%= button_to "refuser",  reject_participation_path(participation), method: :patch, class:"btn btn-sm" %>
      </li>
    <% end %>
  <% end %>
<% end %>


