<div class="background">
 <div class="container">
     <div class="row justify-content-center">
      <div class="col-md-16">
        <%= cl_image_tag(@organisation.photo.key, class: "association-image", alt: @organisation.name, width: 1250, height: 350, crop: :fill, gravity: :auto) %>
      </div>
     </div>
 </div>
</div>

<div class="full-page-bg">
  <div class="second-section position-relative">
    <div class="container">
      <div class="row align-items-start">


 <div class="col-md-3 d-flex justify-content-center align-items-start">
    <%= cl_image_tag(@mission.photo.key, class: "mission-image-2", alt: @mission.title, width: 250, height: 250, crop: :fill, gravity: :auto) %>
  </div>


  <div class="col-md-9 d-flex flex-column align-items-start justify-content-start third-section">
     <h2 class="mb-2 text-center w-100 organisations-text">Association : <%= @organisation.name %></h2>
        <p class="mb-3 font-paragrah"><%= @organisation.description %></p>
      <h2 class="mb-2 text-center w-100 organisations-text">Mission : <%= @mission.title %></h2>
        <p class="mb-3 font-paragrah"><%= @mission.description %></p>

    <div class="mt-3 w-100 d-flex justify-content-between">
      <div class="col-md-3">
        <% if current_user.participations.exists?(mission_id: @mission.id, status: "accepted") %>
             <button class="btn-show-already-engaged fw-bold text-uppercase bg-secondary text-white w-120" disabled>Déjà engagé</button>
         <% elsif current_user.participations.exists?(mission_id: @mission.id, status: "pending") %>
             <button class="btn-show-already-engaged fw-bold text-uppercase bg-secondary text-white w-120" disabled>Demande envoyée</button>
       <% else %>
            <%= link_to "Je m'engage", mission_participations_path(@mission), data: { turbo_method: :post }, class: "btn fw-bold text-uppercase bg-black w-120" %>
       <% end %>
      </div>
      <div class="col-md-3 text-end">
        <%= link_to "Retour sur mon espace", dashboard_path(@mission), class: "btn fw-bold text-uppercase bg-black w-120 btnshow" %>
      </div>
    </div>

  </div>
      </div>
 </div>
  </div>
</div>
